CREATE TABLE events (event_id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, createdBy VARCHAR(100), createdBy_name VARCHAR(200), location VARCHAR(100), time timestamp, venue_id varchar(50), event_type varchar(300));
